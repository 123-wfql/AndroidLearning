<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="680dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#00aaff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:padding="48dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#ffff99">


        <TextView
            android:id="@+id/tv_hello2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ff0000"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="This is 2nd activity!"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <Button
                android:id="@+id/btn_xml"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="xml点击属性测试按钮"
                android:onClick="doClick" />

            <Button
                android:id="@+id/btn_able"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="禁用" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_one"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="按钮1" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="按钮2" />

        <ImageView
            android:id="@+id/iv_random"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/little_sun_1" />

        <Button
            android:id="@+id/btn_random"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="换一张" />

        <Button
            android:id="@+id/btn_backtomain"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="回到main" />

        <Button
            android:id="@+id/btn_jumpActivity2"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="跳到2" />

        <Button
            android:id="@+id/btn_jumpActivity3"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="跳到3" />

        <Button
            android:id="@+id/btn_jumpActivity4"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="跳到4" />


    </LinearLayout>


</LinearLayout>