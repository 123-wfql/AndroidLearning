<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <TextView
        android:id="@+id/tv_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is 4th activity!"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@id/btn_jumpActivity2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_activity" >
        <Button
            android:id="@+id/btn_jumpActivity2"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="跳到2" />

        <Button
            android:id="@+id/btn_jumpActivity3"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="跳到3" />

        <Button
            android:id="@+id/btn_jumpActivity4"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="跳到4" />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>