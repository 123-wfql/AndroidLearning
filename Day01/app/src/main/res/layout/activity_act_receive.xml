<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActReceiveActivity">

    <LinearLayout
        android:id="@+id/ll_respond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/tv_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示上一个页面传来的消息"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_respond"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="回复以下文字" />

        <TextView
            android:id="@+id/tv_respond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这里显示待回复的消息"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_respond"
        android:textSize="24sp" />

</androidx.constraintlayout.widget.ConstraintLayout>